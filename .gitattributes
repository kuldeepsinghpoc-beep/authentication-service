# Text files should be normalized (LF line endings)
* text=auto

# Source code files
*.java text diff=java
*.xml text
*.properties text
*.yml text
*.yaml text
*.json text
*.sql text
*.md text
*.txt text

# Documentation
*.md text
*.txt text
README* text
CHANGELOG* text
LICENSE* text
NOTICE* text

# Configuration files
*.conf text
*.config text
*.ini text
*.cfg text

# Shell scripts
*.sh text eol=lf
*.bash text eol=lf

# Windows batch files
*.bat text eol=crlf
*.cmd text eol=crlf
*.ps1 text eol=crlf

# Binary files
*.jar binary
*.war binary
*.ear binary
*.zip binary
*.tar.gz binary
*.tgz binary
*.gz binary
*.7z binary
*.rar binary

# Images
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.svg text
*.webp binary

# Fonts
*.ttf binary
*.eot binary
*.woff binary
*.woff2 binary

# Audio/Video
*.mp3 binary
*.mp4 binary
*.avi binary
*.mov binary
*.wav binary

# Other binary formats
*.pdf binary
*.doc binary
*.docx binary
*.xls binary
*.xlsx binary
*.ppt binary
*.pptx binary

# IDE specific
*.iml text
*.ipr text
*.iws text

# Certificates and Keys (should be binary to preserve format)
*.pem binary
*.key binary
*.crt binary
*.cert binary
*.p12 binary
*.pfx binary
*.jks binary
*.keystore binary
*.truststore binary